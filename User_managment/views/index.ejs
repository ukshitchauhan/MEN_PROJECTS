<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>User Dashboard</title>
<script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-950 text-white min-h-screen">

<!-- NAVBAR -->
<nav class="w-full bg-zinc-900 border-b border-zinc-800 px-10 py-4 flex justify-between items-center sticky top-0">
    <h1 class="text-xl font-semibold tracking-tight">User Management</h1>
    <a href="/addUser" class="px-4 py-2 bg-blue-500 text-white rounded-lg font-medium hover:bg-blue-400 transition"> + Add User </a>
</nav>

<!-- MAIN CONTENT -->
<div class="p-10">
    <h2 class="text-2xl mb-6 font-semibold tracking-tight">All Users</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-10">
            <% users.forEach((e)=>{ %>
            <!-- USER CARD -->
            <div class="bg-zinc-900 rounded-2xl border border-zinc-800 shadow-lg overflow-hidden hover:shadow-blue-500/10 transition hover:-translate-y-1 flex">
                <!-- IMAGE -->
                <div class="w-1/2 h-48">
                    <img src="<%= e.image %>" alt="" class="w-full h-full object-cover">
                </div>
                <!-- DETAILS -->
                <div class="p-5 w-2/3 flex flex-col justify-between">
                    <div>
                        <h3 class="text-lg font-semibold tracking-tight mb-1"><%= e.name %></h3>
                        <p class="text-zinc-400 text-sm mb-4"><%= e.email %></p>
                    </div>
                    <div class="flex justify-between text-sm">
                        <a class="text-yellow-400 hover:text-yellow-300 transition" href="/edit/<%= e._id %>">Edit</a>
                        <a class="text-red-400 hover:text-red-300 transition" href="/delete/<%= e._id %>">Delete</a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
</div>

</body>
</html>
